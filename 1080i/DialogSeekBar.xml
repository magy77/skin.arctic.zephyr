<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="115">
    <defaultcontrol always="true">901</defaultcontrol>
    <visible>Window.IsActive(fullscreenvideo) + !Window.IsActive(script.pseudotv.TVOverlay.xml) + !Window.IsActive(script.pseudotv.live.TVOverlay.xml)</visible>
    <visible>Window.IsActive(fullscreenvideo) + !Window.IsActive(script.pseudotv.TVOverlay.xml) + !Window.IsActive(script.pseudotv.live.TVOverlay.xml)</visible>
    <visible>Window.IsActive(fullscreenvideo) + !Window.IsActive(script.pseudotv.TVOverlay.xml) + !Window.IsActive(script.pseudotv.live.TVOverlay.xml)</visible>
    <allowoverlay>no</allowoverlay>
    <visible>[VideoPlayer.IsFullscreen] + [Window.IsVisible(videoosd) | Window.IsVisible(fullscreeninfo) | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo | !IsEmpty(Window(home).Property(osdshowinfo))]</visible>
    <zorder>0</zorder>
    <controls>
    <!-- Porgress Ring -->
        <control type="group">
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
			<control type="image">
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <width>100</width>
                <height>100</height>
                <texture>osd/circle.png</texture>
                <aspectratio align="center">keep</aspectratio>
            </control>
            <control type="image" description="Back">
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <width>150</width>
                <height>150</height>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <texture>progress/back.png</texture>
            </control>
            <control type="image" description="Play">
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <width>150</width>
                <height>150</height>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <texture colordiffuse="PanelWhite100">progress/play.png</texture>
                <visible>!Player.Paused</visible>
            </control>
            <control type="image" description="Pause">
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <width>150</width>
                <height>150</height>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <texture colordiffuse="PanelWhite100">progress/pause.png</texture>
                <visible>Player.Paused</visible>
            </control>
            <control type="progress" id="933">
                <texturebg>-</texturebg>
                <lefttexture>-</lefttexture>
                <midtexture>-</midtexture>
                <righttexture>-</righttexture>
                <info>Player.Progress</info>
                <visible>false</visible>
            </control>
            <control type="image">
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <width>150</width>
                <height>150</height>
                <texture>$INFO[Control.GetLabel(933),progress/circle/p,.png]</texture>
                <visible>!IsEmpty(Player.Duration)</visible>
                <aspectratio align="center">keep</aspectratio>
            </control>
        </control>
        <!-- End Progress Ring -->
        <control type="group">
            <animation effect="slide" start="0" end="0,-74" time="150" condition="Window.IsVisible(videoosd)">Conditional</animation>
            <control type="group">
                <animation effect="slide" start="0" end="0,-190" time="150" condition="Window.IsVisible(fullscreeninfo) | Player.ShowInfo | !IsEmpty(Window(home).Property(osdshowinfo)) | [Player.Paused + Skin.HasSetting(osd.showinfoonpause)]">Conditional</animation>
                <animation effect="slide" start="0" end="0,110" time="150" condition="!Window.IsVisible(fullscreeninfo) + !Player.Seeking + !Player.DisplayAfterSeek + !Player.Paused + !Player.Forwarding + !Player.Rewinding + !Player.ShowInfo + IsEmpty(Window(home).Property(osdshowinfo))">Conditional</animation>
                <animation effect="slide" start="0,110" end="0" time="150">Visible</animation>
                <animation effect="slide" start="0,110" end="0" time="150">WindowOpen</animation>
                <control type="image">
                    <right>0</right>
                    <bottom>110</bottom>
                    <width>500</width>
                    <height>281</height>
                    <texture>$INFO[Player.Art(clearart)]</texture>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <include>Animation.FadeIn</include>
                    <include>Animation.FadeOut</include>
                    <visible>Skin.HasSetting(ShowClearArtOSD)</visible>
                    <visible>!IsEmpty(Player.Art(clearart)) + IsEmpty(Player.Art(tvshow.clearart))</visible>
                </control>
                <control type="image">
                    <right>0</right>
                    <bottom>110</bottom>
                    <width>500</width>
                    <height>281</height>
                    <texture>$INFO[Player.Art(tvshow.clearart)]</texture>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <include>Animation.FadeIn</include>
                    <include>Animation.FadeOut</include>
                    <visible>Skin.HasSetting(ShowClearArtOSD)</visible>
                    <visible>!IsEmpty(Player.Art(tvshow.clearart))</visible>
                </control>
                <control type="image">
                    <top>110r</top>
                    <width>100%</width>
                    <height>374</height>
                    <texture>common/white.png</texture>
                    <colordiffuse>$VAR[OSDPanel]</colordiffuse>
                    <animation effect="fade" start="100" end="95" condition="Skin.HasSetting(osd.usetheme)">Conditional</animation>
                    <include>Animation.FadeOut</include>
                </control>
            </control>
            <control type="group">
                <top>300r</top>
                <bottom>0</bottom>
                <width>100%</width>
                <visible>Window.IsVisible(fullscreeninfo) | Player.ShowInfo | !IsEmpty(Window(home).Property(osdshowinfo)) | [Player.Paused + Skin.HasSetting(osd.showinfoonpause)]</visible>
                <animation effect="fade" start="0" end="100" delay="150" time="150">Visible</animation>
                <animation effect="fade" start="0" end="100" delay="150" time="150">WindowOpen</animation>
                <control type="group">
                    <left>SidePad</left>
                    <right>SidePad</right>
                    <top>20</top>
                    <bottom>20</bottom>
                    <control type="image">
                        <width>173</width>
                        <height>260</height>
                        <texture>$VAR[PlayerPoster]</texture>
                        <visible>!IsEmpty(Player.Art(tvshow.poster)) | !IsEmpty(Player.Art(poster))</visible>
                    </control>
                    
                    <control type="image">
                        <width>260</width>
                        <height>260</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Player.Art(thumb)]</texture>
                        <visible>VideoPlayer.Content(LiveTV) + !IsEmpty(Player.Art(thumb))</visible>
                    </control>
                    
                    <control type="group">
                        <left>290</left>
                        <visible>VideoPlayer.Content(LiveTV) + !IsEmpty(Player.Art(thumb))</visible>
                        <include>OSDInfoContent</include>
                    </control>
                    
                    <control type="group">
                        <left>203</left>
                        <visible>!IsEmpty(Player.Art(tvshow.poster)) | !IsEmpty(Player.Art(poster))</visible>
                        <include>OSDInfoContent</include>
                    </control>
                    
                    <control type="group">
                        <left>0</left>
                        <visible>IsEmpty(Player.Art(tvshow.poster)) + IsEmpty(Player.Art(poster)) + [!VideoPlayer.Content(LiveTV) | IsEmpty(Player.Art(thumb))]</visible>
                        <include>OSDInfoContent</include>
                    </control>
                
                </control>
            </control>
            <control type="group">
                <visible>!Player.Paused | !Skin.HasSetting(osd.showinfoonpause)</visible>
                <visible>!Window.IsVisible(fullscreeninfo) + !Player.ShowInfo + IsEmpty(Window(home).Property(osdshowinfo))</visible>
                <visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
                <animation effect="fade" start="0" end="100" delay="150" time="150">Visible</animation>
                <animation effect="fade" start="0" end="100" delay="150" time="150">WindowOpen</animation>
                <top>110r</top>
                <bottom>0</bottom>
                <width>100%</width>
                
                <control type="group">
                    <left>SidePad</left>
                    <right>SidePad</right>
                    <top>20</top>
                    <bottom>20</bottom>
                    <control type="label" description="Finishes Time">
                        <width>400</width>
                        <bottom>30</bottom>
                        <height>40</height>
                        <font>Tiny</font>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <label>$VAR[PlayerStatus]</label>
                    </control>
                    <control type="label" description="Duration Total Time">
                        <right>0</right>
                        <align>right</align>
                        <width>400</width>
                        <bottom>30</bottom>
                        <height>40</height>
                        <font>Tiny</font>
                        <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                        <label>$INFO[Player.Time]$INFO[Player.Duration,  /  ,]</label>
                    </control>
                    <control type="image">
                        <description>Progress Back</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <texture colordiffuse="Black12">common/white.png</texture>
                        <visible>Skin.HasSetting(osd.usetheme)</visible>
                    </control>
                    <control type="progress" description="cache">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>Player.ProgressCache</info>
                        <visible>true</visible>
                        <texturebg colordiffuse="00ffffff">osd/progress-bg.png</texturebg>
                        <lefttexture colordiffuse="Highlight2">osd/progress-end.png</lefttexture>
                        <midtexture colordiffuse="Highlight2">osd/progress-end.png</midtexture>
                        <righttexture colordiffuse="Highlight2">osd/progress-end.png</righttexture>
                    </control>
                    <control type="progress" id="23">
                        <description>Progress Bar</description>
                        <width>100%</width>
                        <bottom>10</bottom>
                        <height>8</height>
                        <info>Player.Progress</info>
                        <visible>true</visible>
                    </control>
                    <!-- Clock-->
                         <control type="group">
                             <!-- hier kannst du die abstände mit right & bottom definieren -->
                            <bottom>10</bottom>
                            <right>0</right>
                             <!-- hier kannst du die abstände mit right & bottom definieren -->
                            <height>84</height>
                            <animation effect="slide" start="0" end="0,-10" time="150" condition="Skin.HasSetting(furniture.weather)">Conditional</animation>
                            <control type="label">
                                <centertop>24</centertop>
                                <right>50</right>
                                <align>right</align>
                                <font>LargeBold</font>
                                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                                <label>$INFO[System.Time(hh:mm)]</label>
                                <animation effect="slide" start="0" end="50" time="0" condition="IsEmpty(System.Time(xx))">Conditional</animation>
                            </control>
                            <control type="label">
                                <centertop>30</centertop>
                                <font>SmallBold</font>
                                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                                <align>right</align>
                                <right>0</right>
                                <width>120</width>
                                <label>$INFO[System.Time(xx)]</label>
                                <visible>!IsEmpty(System.Time(xx))</visible>
                            </control>  
                            <control type="label">
                                <centertop>64</centertop>
                                <font>Flag</font>
                                <right>0</right>
                                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                                <align>right</align>
                                <width>50%</width>
                                <label>$INFO[System.Date(DDD)]$COMMA $INFO[System.Date(d MMM yyyy)]</label>
                            </control>
                            <control type="label">
                                <centertop>92</centertop>
                                <font>Flag</font>
                                <right>0</right>
                                <textcolor>$VAR[OSDPanelWhite70]</textcolor>
                                <align>right</align>
                                <width>50%</width>
                                <visible>Skin.HasSetting(furniture.weather)</visible>
                                <label>$INFO[Weather.Temperature,[COLOR=Highlight],[/COLOR]  ]$INFO[Weather.Conditions]</label>
                            </control>
                        </control>
                        <!-- End Clock -->
                </control>
            </control>
        
        </control>
        <!-- Clock -->
        <!-- <include>Furniture_OSDClock</include> -->
    </controls>

</window>
